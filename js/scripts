document.addEventListener('DOMContentLoaded', function() {
    // Mapeo de botones a contenedores de tablas
    var tables = {
        aboutMeButton: document.getElementById('tableContainer1'),
        identidadButton: document.getElementById('tableContainer2'),
        impresosButton: document.getElementById('tableContainer3'),
        webButton: document.getElementById('tableContainer4'),
        editorialButton: document.getElementById('tableContainer5')
    };

    // Contenidos de las tablas para cada botón
    var tableContents = {
        aboutMeButton: `
            <table width="90%" border="0" align="center" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                    <td>Ofrezco soluciones de diseño gráfico que impulsan la identidad de marcas y negocios, brindando servicios efectivos y personalizados para ayudarte a destacar en el mercado</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td></td>
                    <td>aui va el texto</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        `,
        identidadButton: `
            <table width="90%" border="0" align="center" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                    <td>Diseñamos identidad corporativa para marcas, incluyendo logotipos, papelería y elementos visuales que refuercen tu presencia en el mercado.</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td></td>
                    <td>Detalles de identidad corporativa</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        `,
        impresosButton: `
            <table width="90%" border="0" align="center" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                    <td>Servicios de diseño para impresos, como folletos, tarjetas de presentación, y otros materiales físicos para tu negocio.</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td></td>
                    <td>Detalles de impresos</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        `,
        webButton: `
            <table width="90%" border="0" align="center" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                    <td>Diseño web personalizado para tu marca, incluyendo desarrollo de sitios web, diseño de interfaces y experiencia de usuario.</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td></td>
                    <td>Detalles de diseño web</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        `,
        editorialButton: `
            <table width="90%" border="0" align="center" cellspacing="0" cellpadding="0">
                <tr>
                    <td>&nbsp;</td>
                    <td>Diseño editorial para publicaciones, incluyendo revistas, libros, y otros materiales impresos con un enfoque en diseño atractivo y funcional.</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td></td>
                    <td>Detalles de diseño editorial</td>
                    <td>&nbsp;</td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                </tr>
            </table>
        `
    };

    // Función para ocultar todas las tablas
    function hideAllTables() {
        Object.values(tables).forEach(table => {
            table.style.display = 'none';
        });
    }

    // Asignar eventos a los botones
    Object.keys(tables).forEach(buttonId => {
        var button = document.getElementById(buttonId);
        var tableContainer = tables[buttonId];

        button.addEventListener('click', function(event) {
            event.preventDefault(); // Evita que el enlace haga scroll a la parte superior de la página

            // Ocultar todas las tablas
            hideAllTables();

            // Si la tabla está vacía, cargar el contenido y mostrarla
            if (tableContainer.innerHTML === '') {
                tableContainer.innerHTML = tableContents[buttonId];
            }
            // Mostrar o esconder la tabla según su estado actual
            tableContainer.style.display = tableContainer.style.display === 'none' || tableContainer.style.display === '' ? 'block' : 'none';
        });
    });
});
